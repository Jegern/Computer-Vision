<Window x:Class="Laboratory_work_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Laboratory_work_1.ViewModels"
        mc:Ignorable="d"

        Title="MainWindow"
        Width="600" Height="450"
        MinWidth="600" MinHeight="450"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Window.CommandBindings>
        <!-- <CommandBinding Command="Open" Executed="OpenImageCommand_OnExecuted" /> -->
        <CommandBinding Command="Help" Executed="TogglePixelInfoCommand_OnExecuted" />
        <CommandBinding Command="Zoom" Executed="ToggleSlidingWindowCommand_OnExecuted" />
        <CommandBinding Command="NavigateJournal" Executed="ToggleSlidingWindowInfoCommand_OnExecuted" />
        <CommandBinding Command="ScrollByLine" Executed="ToggleBrightnessProfileCommand_OnExecuted" />
        <CommandBinding Command="Properties" Executed="ToggleImagePropertiesCommand_OnExecuted" />
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Modifiers="Control" Key="O" Command="{Binding OpenImageCommand}" />
        <KeyBinding Modifiers="Control" Key="I" Command="Help" />
        <KeyBinding Modifiers="Control" Key="W" Command="Zoom" />
        <KeyBinding Modifiers="Control" Key="M" Command="NavigateJournal" />
        <KeyBinding Modifiers="Control" Key="P" Command="ScrollByLine" />
        <KeyBinding Modifiers="Control" Key="T" Command="Properties" />
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0"
                              x:Name="ToolsColumn" />
        </Grid.ColumnDefinitions>


        <Menu Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0">
            <MenuItem Header="Файл"
                      Height="25">
                <MenuItem Header="Открыть"
                          InputGestureText="Ctrl+O"
                          Command="{Binding OpenImageCommand}" />
            </MenuItem>
            <MenuItem Header="Инструменты"
                      Height="25">
                <MenuItem Header="Информация о пикселе"
                          InputGestureText="Ctrl+I"
                          Command="Help" />
                <MenuItem Header="Скользящее окно"
                          InputGestureText="Ctrl+W"
                          Command="Zoom" />
                <MenuItem Header="Информация о скользящем окне"
                          InputGestureText="Ctrl+M"
                          Command="NavigateJournal" />
                <MenuItem Header="Профиль яркости"
                          InputGestureText="Ctrl+P"
                          Command="ScrollByLine" />
                <MenuItem Header="ПропертиИмагов"
                          InputGestureText="Ctrl+T"
                          Command="Properties" />
            </MenuItem>
        </Menu>

        <Image Grid.Column="0" Grid.Row="1"
               x:Name="Picture"
               Source="{Binding Picture}"
               Stretch="Uniform"
               Width="{Binding Source.(BitmapImage.PixelWidth), RelativeSource={RelativeSource Self}}"
               Height="{Binding Source.(BitmapImage.PixelHeight), RelativeSource={RelativeSource Self}}"
               MouseMove="MainImage_OnMouseMove" />

        <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"
              x:Name="FrameGrid"
              Background="WhiteSmoke">
            <Grid.RowDefinitions>
                <RowDefinition Height="0*"/>
                <RowDefinition Height="0*"/>
                <RowDefinition Height="0*"/>
                <RowDefinition Height="0*"/>
                <RowDefinition Height="0*"/>
            </Grid.RowDefinitions>
            <Frame Grid.Row="0"
                   x:Name="PixelInfoFrame"
                   NavigationUIVisibility="Hidden"
                   Tag="Hidden"
                   LoadCompleted="Frame_OnLoadCompleted" />
            <Frame Grid.Row="1"
                   x:Name="SlidingWindowFrame"
                   NavigationUIVisibility="Hidden"
                   Tag="Hidden"
                   LoadCompleted="Frame_OnLoadCompleted" />
            <Frame Grid.Row="2"
                   x:Name="SlidingWindowInfoFrame"
                   NavigationUIVisibility="Hidden"
                   Tag="Hidden"
                   LoadCompleted="Frame_OnLoadCompleted" />
            <Frame Grid.Row="3"
                   x:Name="BrightnessProfileFrame"
                   NavigationUIVisibility="Hidden"
                   Tag="Hidden"
                   LoadCompleted="Frame_OnLoadCompleted" />
            <Frame Grid.Row="4"
                   x:Name="ImagePropertiesFrame"
                   NavigationUIVisibility="Hidden"
                   Tag="Hidden"
                   LoadCompleted="Frame_OnLoadCompleted" />
        </Grid>
    </Grid>
</Window>