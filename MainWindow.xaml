<Window x:Class="Laboratory_work_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Laboratory_work_1.ViewModels"
        mc:Ignorable="d"

        Title="MainWindow"
        Width="200" Height="200"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Window.InputBindings>
        <KeyBinding
            Modifiers="Control" Key="O"
            Command="{Binding OpenImageCommand}" />
        <KeyBinding
            Modifiers="Control" Key="S"
            Command="{Binding SaveImageCommand}" />
        <KeyBinding
            Modifiers="Control" Key="M"
            Command="{Binding MagnifierCommand}" />
        <KeyBinding
            Modifiers="Control" Key="I"
            Command="{Binding ImageManagementCommand}" />
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="0"
                              x:Name="ToolsColumn" />
        </Grid.ColumnDefinitions>


        <Menu Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0">
            <MenuItem Header="Файл"
                      Height="25">
                <MenuItem Header="Открыть"
                          InputGestureText="Ctrl+O"
                          Command="{Binding OpenImageCommand}" />
                <MenuItem Header="Сохранить"
                          InputGestureText="Ctrl+S"
                          Command="{Binding SaveImageCommand}" />
            </MenuItem>
            <MenuItem Header="Инструменты"
                      Height="25">
                <MenuItem Header="Информация о пикселе"
                          Command="{Binding PixelInfoCommand}" />
                <MenuItem Header="Увеличительное стекло"
                          InputGestureText="Ctrl+M"
                          Command="{Binding MagnifierCommand}" />
                <MenuItem Header="Информация об увеличительном стекле"
                          Command="{Binding MagnifierInfoCommand}" />
                <MenuItem Header="Управление изображением"
                          InputGestureText="Ctrl+I"
                          Command="{Binding ImageManagementCommand}" />
            </MenuItem>
        </Menu>

        <Image Grid.Column="0" Grid.Row="1"
               x:Name="Picture"
               Source="{Binding Picture}"
               Stretch="None"
               MouseMove="MainImage_OnMouseMove" />

        <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"
              x:Name="FrameGrid"
              Background="WhiteSmoke">
            <Grid.RowDefinitions>
                <RowDefinition Height="0*" />
                <RowDefinition Height="0*" />
                <RowDefinition Height="0*" />
                <RowDefinition Height="0*" />
            </Grid.RowDefinitions>
            <Frame Grid.Row="0"
                   x:Name="PixelInfoFrame"
                   Content="{Binding PixelInfo}"
                   LoadCompleted="Frame_OnLoadCompleted" />
            <!-- <Frame Grid.Row="1" -->
            <!--        x:Name="SlidingWindowFrame" -->
            <!--        Content="{Binding Magnifier}" -->
            <!--        LoadCompleted="Frame_OnLoadCompleted" /> -->
            <!-- <Frame Grid.Row="2" -->
            <!--        x:Name="SlidingWindowInfoFrame" -->
            <!--        Content="{Binding MagnifierInfo}" -->
            <!--        LoadCompleted="Frame_OnLoadCompleted" /> -->
            <!-- <Frame Grid.Row="3" -->
            <!--        x:Name="ImageManagementFrame" -->
            <!--        Content="{Binding ImageManagement}" -->
            <!--        LoadCompleted="Frame_OnLoadCompleted" /> -->
        </Grid>
    </Grid>
</Window>