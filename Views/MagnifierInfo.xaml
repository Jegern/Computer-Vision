<UserControl x:Class="Laboratory_work_1.Views.MagnifierInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:Laboratory_work_1.ViewModels"
             mc:Ignorable="d"

             Width="200" Height="Auto">

    <UserControl.DataContext>
        <viewModel:MagnifierInfoViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/StackPanel.xaml" />
                <ResourceDictionary Source="Styles/TextBlock.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel Margin="8">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Среднее значение"
                       Width="91"
                       Margin="0, 0, 1, 0" />
            <TextBlock Text="{Binding Mean}"
                       Width="91"
                       Margin="1, 0, 0, 0" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Стандартное отклонение"
                       Width="91"
                       Margin="0, 0, 1, 0" />
            <TextBlock Text="{Binding Deviation}"
                       Width="91"
                       Margin="1, 0, 0, 0" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Медиана"
                       Width="91"
                       Margin="0, 0, 1, 0" />
            <TextBlock Text="{Binding Median}"
                       Width="91"
                       Margin="1, 0, 0, 0" />
        </StackPanel>
    </StackPanel>
</UserControl>