<UserControl x:Class="Laboratory_work_1.Views.Magnifier"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:Laboratory_work_1.ViewModels"
             mc:Ignorable="d"

             Width="200" Height="Auto">

    <UserControl.DataContext>
        <viewModel:MagnifierViewModel />
    </UserControl.DataContext>
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/StackPanel.xaml"/>
                <ResourceDictionary Source="Styles/TextBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel Margin="8">
        <Border BorderBrush="#BBB"
                BorderThickness="1"
                Width="184" Height="184"
                Margin="0, 0, 0, 1">
            <Image Source="{Binding Window}"
                   RenderOptions.BitmapScalingMode="NearestNeighbor" />
        </Border>
        <TextBox Text="{Binding Size, 
                                UpdateSourceTrigger=PropertyChanged}"
                 MaxLength="2" 
                 Margin="0, 0, 0, 0" />
    </StackPanel>
</UserControl>